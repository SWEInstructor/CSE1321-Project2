//parameters: String[] inputs, String  command
BEGIN
  CREATE isCorrectInput = true;
  CREATE
  WHILE isCorrectInput
    FOR i = 0 TO length of inputs
      CREATE current;
      current = inputs[i];
      IF(command != "current") THEN
         isCorrectInput =false;
      END IF 
    END FOR
    
  END  WHILE
  
  
  RETURN command;
  
  
  
END

USAGE:
String[] inputs = {"visit", "use", "help", "look", "check inventory"}
